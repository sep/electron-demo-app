{
  "name": "electron-demo-app",
  "version": "1.0.0",
  "description": "A sample demo app for learning Electron",
  "main": "./main/main.js",
  "scripts": {
    "compile": "tsc && webpack --config webpack.config.js",
    "lint": "eslint . --ext .ts,.tsx",
    "start": "npm run compile && electron-forge start",
    "test": "npm run test-windows",
    "test-windows": "npm run make-windows && jest",
    "test-linux": "npm run make-linux && jest",
    "test-mac": "npm run make-mac && jest",
    "package": "electron-forge package",
    "make-all": "npm run make-linux && npm run make-mac && npm run make-windows",
    "make-linux": "electron-forge make --platform linux",
    "make-mac": "electron-forge make --platform darwin",
    "make-windows": "npm run compile && electron-forge make --platform win32"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sep/electron-demo-app.git"
  },
  "author": "SEP",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sep/electron-demo-app/issues"
  },
  "homepage": "https://github.com/sep/electron-demo-app#readme",
  "jest": {
    "verbose": true,
    "roots": [
      "renderer",
      "integration_tests"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[t]sx?$"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.10",
    "@babel/preset-typescript": "^7.16.7",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-loader": "^8.2.3",
    "electron": "^16.0.7",
    "eslint": "^8.7.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "jest": "^27.4.7",
    "path": "^0.12.7",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@babel/preset-react": "^7.16.7",
    "@types/selenium-webdriver": "^4.0.16",
    "electron-chromedriver": "^16.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "npm-run": "^5.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "selenium-webdriver": "^4.1.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_demo_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
